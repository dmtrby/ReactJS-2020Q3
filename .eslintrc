{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "plugins": ["react", "import"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "commonjs": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "implicit-arrow-linebreak": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "linebreak-style": 0,
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "no-console": [
      "error",
      {
        "allow": ["warn"]
      }
    ],
    "object-curly-newline": "off",
    "camelcase": "off",
    "react/button-has-type": "off",
    "react/jsx-props-no-spreading": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "global-require": 0
  }
}